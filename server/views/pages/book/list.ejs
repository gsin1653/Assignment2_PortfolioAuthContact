<% include ../../partials/header.ejs %>
<% include ../../partials/main_nav.ejs %>

<!--Main Content section-->
<main class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1><%= title %></h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <thead class="table-primary">
                <tr class="d-flex" >
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">Title</th>
                        <th class="text-center col-2">Author</th>
                        <th class="text-center col-1">Year</th>
                        <th class="col-4">Description</th>
                        <th class="text-center col-1">Price</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } else { %>
                        <th class="text-center col-2">Title</th>
                        <th class="text-center col-2">Author</th>
                        <th class="text-center col-1">Year</th>
                        <th class="col-6">Description</th>
                        <th class="text-center col-1">Price</th>
                    <% } %>
                </tr>
            </thead>

                <!-- Repeatable Template Row -->
                <tbody>
                <% for(let count = 0; count < BookList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2"><%= BookList[count].name %></td>
                            <td class="text-center col-2"><%= BookList[count].author %></td>
                            <td class="text-center col-1"><%= BookList[count].published %></td>
                            <td class="col-4"><%= BookList[count].description %></td>
                            <td class="text-center col-1"><%= BookList[count].price %></td>            
                            <td class="text-center col-1">
                                <a href="/book/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/book/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-2"><%= BookList[count].name %></td>
                            <td class="text-center col-2"><%= BookList[count].author %></td>
                            <td class="text-center col-1"><%= BookList[count].published %></td>
                            <td class="col-6"><%= BookList[count].description %></td>
                            <td class="text-center col-1"><%= BookList[count].price %></td>  
                         <% } %>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            
            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/book/add" class="btn btn-primary btn-lg btn-block" role="button">
                <i class="fas fa-plus-circle"></i> Add a Book</a>
            <% } %>

        </div>
        <table class="table table-hover"></table>
                        <div data-role="footer" data-position="fixed">
                            <h1>Your Footer</h1>
                        </div>
    </div>
  </main>

<% include ../../partials/bottom_nav.ejs %>
<% include ../../partials/footer.ejs %>